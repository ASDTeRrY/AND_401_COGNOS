<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvComa"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" , "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tvCero"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" 0 "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_toRightOf="@id/tvComa"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tvIgual"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" = "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tvCero"/>

    <TextView
        android:id="@+id/tvUno"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" 1 "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_above="@id/tvComa"/>

    <TextView
        android:id="@+id/tvDos"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" 2 "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_toRightOf="@id/tvUno"
        android:layout_above="@id/tvCero"/>

</RelativeLayout>
