<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvComa"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" , "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tvCero"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" 0 "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_toRightOf="@id/tvComa"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tvIgual"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" = "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tvCero"/>

    <TextView
        android:id="@+id/tvUno"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" 1 "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_above="@id/tvComa"/>

    <TextView
        android:id="@+id/tvDos"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" 2 "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_toRightOf="@id/tvUno"
        android:layout_above="@id/tvCero"/>

    <TextView
        android:id="@+id/tvTres"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" 3 "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_toRightOf="@id/tvDos"
        android:layout_above="@id/tvIgual"/>

    <TextView
        android:id="@+id/tvCuatro"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" 4 "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_above="@id/tvUno"/>

    <TextView
        android:id="@+id/tvCinco"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" 5 "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_above="@id/tvDos"
        android:layout_toRightOf="@id/tvCuatro"/>

    <TextView
        android:id="@+id/tvSeis"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" 6 "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_above="@id/tvTres"
        android:layout_toRightOf="@id/tvCinco"/>

    <TextView
        android:id="@+id/tvSiete"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" 7 "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_above="@id/tvCuatro"/>

    <TextView
        android:id="@+id/tvOcho"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" 8 "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_above="@id/tvCinco"
        android:layout_toRightOf="@id/tvSiete"/>

    <TextView
        android:id="@+id/tvNueve"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text=" 9 "
        android:background="#313131"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_above="@id/tvSeis"
        android:layout_toRightOf="@id/tvOcho"/>

    <LinearLayout
        android:id="@+id/llOperadores"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_toRightOf="@id/tvNueve"
        android:layout_below="@+id/tvResultado">

        <TextView
            android:id="@+id/tvCE"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=" CE "
            android:background="#706f6f"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvDivision"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=" / "
            android:background="#706f6f"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvMultiplicacion"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=" X "
            android:background="#706f6f"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvResta"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=" - "
            android:background="#706f6f"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvSuma"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=" + "
            android:background="#706f6f"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical"
        android:textSize="50sp"
        android:text="123"
        android:paddingRight="20dp"
        android:layout_above="@id/tvNueve"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#20f185"
        android:layout_toRightOf="@id/llOperadores"
        android:layout_below="@id/tvResultado"/>

</RelativeLayout>
